<% include ../partials/header %>

<% include ../partials/mapModal %>

<style>
    .mandatory-field:before {
        content: "*"; 
        color:red;
    }
</style>
 
<body>
    <div class="container">
        <br>
        <form>
            <div class="form-group col-md-12">
                <p class='mandatory-field'> Please enter the title of the product: </p>
                <input type="text" class="form-control" name="title" id="title" placeholder="Title of Product" required>
            </div>

            <div class="form-group col-md-12">
                <p class='mandatory-field'> Please choose the category of the product: </p>
                <select id="position" name="categoryName" class="form-control" required>
                    <option selected disabled>Choose category</option>
                    <option>None</option>
                    <option>Books</option>
                    <option>Furniture</option>
                    <option>Electronics</option>
                    <option>Clothing</option>
                    <option>Sports</option>
                    <option>Events</option>
                </select>
            </div>

            <div class="form-group col-md-12">
                <p class='mandatory-field'> Description : </p>
                <textarea rows="8" cols="129" name="description" placeholder="Enter description here..."></textarea>
            </div>

            <div class="form-group col-md-12">
                <p class='mandatory-field'> Price: </p>
                <input type="number" class="form-control" name="price" id="price" placeholder="Price" required>
            </div>

            <div class="form-group col-md-12">
                <p class='mandatory-field'> Please select your transfer location: </p>
                <select id="location" name="location" class="form-control" required>
                    <option selected disabled>Choose Location</option>
                    <option>Library</option>
                    <option>Thornton Hall</option>
                    <option>Student Service Building</option>
                </select>
                <br>
                <p>(Click on map to enlarge)</p>
                <a href="#" data-toggle="modal" data-target="#mapImg">
                    <img src='/map.png' width="345" height="223" >
                </a>
                
            <div class="form-group col-md-12">
                <br >
                <p class='mandatory-field'> Choose File to upload product image:</p>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="inputGroupFileAddon01">Upload</span>
                    </div>
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" id="inputGroupFile01" aria-describedby="inputGroupFileAddon01">
                        <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
                    </div>
                </div>
            </div>
            <h5 style='text-align: center; color: red'>Please allow up to 24 hours for your listing to get uploaded.</h5>
            <div class="form-group ">
                <div class="col-md-2">
                    <button type="reset" class="btn btn-secondary btn-md">reset </button>
                    <button type="button" class="btn btn-primary btn-md">submit</button>
                </div>
            </div> 
        </form>
    </div>
</div>


