<% include ../partials/header %>

<style>
    .sell_form {
        text-align: center;
    }

</style>

<body>
        <div class="container">
                <% if (message != '') { %>
                    <p class="text-center text-danger"><%= message %></p>
                <% } %>
                <h1>Sell Product</h1>
                <p></p>
                <form class="add-player-form" action="" method="post" enctype="multipart/form-data">
                    <div class="form-row">
                        <div class="form-group col-md-1">Title</div>
                        <div class="form-group col-md-4">
                            <input type="text" class="form-control" name="title" id="title" placeholder="Title of Product" required>
                        </div>  
                                      
                    </div>
                    <!-- <div class="form-row">
                        <div class="form-group col-md-4">
                            <input type="text" class="form-control" name="categoryId" id="categoryId" placeholder="Please Select the Category" required>
                        </div>
                    </div> -->
                    <div class="form-row">
                            <div class="form-group col-md-1">Category</div>
                            <div class="form-group col-md-4">
                                        <select id="position" name="categoryName" class="form-control" required>
                                            <option selected disabled>Choose category</option>
                                            <option>Books</option>
                                            <option>Furniture</option>
                                            <option>Electronics</option>
                                            <option>Clothing</option>
                                            <option>Sports</option>
                                            <option>Events</option>
                                        </select>
                            </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-1">Description</div>
                        <div class="form-group col-md-4">
                            <textarea name="description" id="" cols="40" rows="4" id="description" placeholder="Enter the product description" required></textarea>
                        </div>
                    </div>
                    
                    <div class="form-row">
                        <div class="form-group col-md-1">Price</div>
                        <div class="form-group col-md-4">
                            <input type="number" class="form-control" name="price" id="price" placeholder="Price" required>
                        </div>              
                     
                    </div>
                    <div class="form-row">
                            <div class="form-group col-md-1">Location</div>
                            <div class="form-group col-md-4">
                                        <select id="location" name="location" class="form-control" required>
                                            <option selected disabled>Choose Location</option>
                                            <option>Library</option>
                                            <option>Thornton Hall</option>
                                            <option>Student Service Building</option>
                                        </select>
                            </div>              
                         
                        </div>
                    
                    <div class="form-row">
                            <div class="form-group col-md-1">Image</div>
                            <div class="col-md-4">
                                    <!-- <label for="image"><b>Product Image</b></label><br> -->
                                    <input type="file" name="image" id="image" class="" required>
                            </div>
                    </div>
                    <div class="form-group col-md-3">
                            <button type="submit" class="btn btn-primary float-right">Add Product</button>
                    </div>
                   
                </form>
            </div>
</body>

<% include ../partials/footer %>